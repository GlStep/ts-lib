{
  "name": "vue-lib-monorepo-template",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.18.1",
  "description": "A monorepo template for developing Vue libraries",
  "author": "Gleb Stepanov <gleb.stepanov@online.de>",
  "license": "MIT",
  "engines": {
    "node": ">=24.7.0",
    "pnpm": ">=10.16.1"
  },
  "scripts": {
    "dev": "pnpm -F playground dev",
    "test": "pnpm --if-present -r run test",
    "test-ci": "pnpm --if-present -r run test-ci",
    "test-libs": "pnpm -F '@glstep/*' run test",
    "docs": "pnpm -F docs run dev",
    "docs-build": "pnpm -F docs run build",
    "lint": "pnpm eslint .",
    "lint-fix": "pnpm eslint . --fix",
    "build": "pnpm build-packages && pnpm build-packages-ts && pnpm build-playground && pnpm build-docs",
    "build-packages": "pnpm -F @glstep/lib run build",
    "build-packages-ts": "pnpm -F @glstep/lib-ts run build",
    "build-playground": "pnpm -F playground run build",
    "build-docs": "pnpm -F docs run build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@tsconfig/node24": "^24.0.1",
    "@types/node": "24.6.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/compiler-dom": "^3.5.22",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.36.0",
    "eslint-plugin-format": "^1.0.1",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "run-p": "^0.0.0",
    "typescript": "^5.9.0",
    "vite": "^7.1.0",
    "vitest": "^3.2.4",
    "vue": "^3.5.0",
    "vue-tsc": "^3.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search"
      ]
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "vue-demi"
    ]
  }
}
