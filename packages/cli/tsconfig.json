{
  "compilerOptions": {
    "target": "ES2022",
    "rootDir": "src",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": false,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "vitest.config.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
